Config { font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true" 
        , bgColor = "#002B36"
        , fgColor = "#585858"
        , position = Static { xpos = 0, ypos = 0, width = 1824, height = 16 } --TopW L 95
        , commands = [ Run Cpu [] 10 
		     , Run Memory ["-t","Mem: <usedratio>%"] 10
                     , Run Swap [] 10
                     , Run StdinReader
                     , Run DiskU [("/","<used>i/<size>")]
                                 ["-L","20","-H","50","-m","1","-p","3"]
                                 20
		     , Run Com "/home/solomon/.bin/getVolume.py" [] "volume" 1
                     ]
        , template = "%StdinReader% }{ %disku% * %cpu% * %memory% * %swap% * %volume%    <fc=#ee9a00>%date%</fc>"
        }
